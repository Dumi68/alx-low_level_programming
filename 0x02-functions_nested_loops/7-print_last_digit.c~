#include "main.h"
/**
 * print_last_digit - prints last digit if a number
 * @n: the int where the last digit is printed from
 * Return: value of last digit
 */
int print_last_digit(int n)
{
  int x;
  if (n < 0)
    {
      n = -n;
    }
  x = n % 10;
  if (x < 0)
    {
      x = -x;
    }
  _putchar(x + 48);
  return (x);
}
